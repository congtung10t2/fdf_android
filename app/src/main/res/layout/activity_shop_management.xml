<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_shop_management"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="2"
    tools:context="com.framgia.foodanddrink.ui.activity.ShopManagementActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3">
        <LinearLayout
            android:orientation="vertical"
            android:keepScreenOn="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:text="New Shop"
                android:textStyle="bold"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:layout_gravity="center_horizontal"/>

            <AutoCompleteTextView
                android:hint="Shop name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/input_shop_name"
                android:layout_gravity="center_horizontal"/>

            <AutoCompleteTextView
                android:hint="Shop description"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:inputType="textMultiLine"
                android:id="@+id/input_shop_desc"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:text="Avatar"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_camera_sample"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                app:srcCompat="@android:drawable/ic_menu_camera"
                android:id="@+id/input_img_avatar"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:text="Cover"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_camera_sample2"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                app:srcCompat="@android:drawable/ic_menu_camera"
                android:id="@+id/input_img_cover"
                android:layout_gravity="center_horizontal"/>

            <Button
                android:text="Request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_request_shop"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </ScrollView>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/content_shop_manager"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:scrollbars="horizontal"/>

</LinearLayout>
