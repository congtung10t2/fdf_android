<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NonWidthStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextProfile">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/item_title_size</item>
        <item name="android:layout_gravity">left|bottom</item>
    </style>
    <style name="LayoutProfile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/profile_name_layout_padding</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:background">@drawable/border_stroke</item>
    </style>

    <style name="EditProfileBtn">
        <item name="android:layout_width">@dimen/edit_profile_side_margin</item>
        <item name="android:layout_height">@dimen/edit_profile_side_margin</item>
        <item name="android:background">@android:drawable/ic_menu_edit</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <style name="TransparentBtnInLoginPage">
        <item name="android:layout_width">@dimen/zerodp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TextProfileTitle" parent="TextProfile">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">30dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>
